{
    "manifest_version": 2,
    "name": "Tab Manager",
    "version": "1.0",
  
    "description": "Gérer les onglets pour les gens mal organisés.",
  
    "icons": {},
  
    "content_scripts": [
        
    ],

    "permissions": [
        "<all_urls>",
        "tabs",
        "activeTab",
        "commands"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "browser_action": {
        "default_popup": "popup.html"
    },
    "commands": {
      "show-leftmost-tab": {
        "suggested_key": {
          "default": "Ctrl+Home"
        },
        "description": "Afficher l'onglet le plus à gauche"
      },
      "show-rigthmost-tab": {
        "suggested_key": {
            "default": "Ctrl+End"
        },
        "description": "Afficher l'onget le plus à droite"
      },
      "move-tab-to-left": {
        "suggested_key": {
            "default": "Ctrl+Shift+Home"
        },
        "description": "Déplacer l'onglet à droite"
      },
      "move-tab-to-right": {
        "suggested_key": {
            "default": "Ctrl+Shift+End"
        },
        "description": "Déplacer l'onglet à gauche"
      }
    }
}  